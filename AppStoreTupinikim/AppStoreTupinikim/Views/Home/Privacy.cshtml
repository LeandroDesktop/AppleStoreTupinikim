@{
    ViewData["Title"] = "Produtos";
}
<h1>@ViewData["Title"]</h1>

<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Index">Produtos</a>
</li>

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>

    <h2>Lista de Produtos</h2>

    <table>
        <tr>
            <th>Produto</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
        <tr>
            <td>Produto A</td>
            <td>R$10,00</td>
            <td>5</td>
        </tr>
        <tr>
            <td>Produto B</td>
            <td>R$20,00</td>
            <td>3</td>
        </tr>
        <tr>
            <td>Produto C</td>
            <td>R$5,00</td>
            <td>10</td>
        </tr>
    </table>

</body>
</html>